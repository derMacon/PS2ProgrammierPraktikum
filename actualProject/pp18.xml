<?xml version="1.0" encoding="UTF-8"?>
<project name="actualproject" default="all">


    <property file="pp18.properties"/>
    <!-- Uncomment the following property if no tests compilation is needed -->
    <!--
    <property name="skip.tests" value="true"/>
     -->

    <!-- Compiler options -->

    <property name="compiler.debug" value="on"/>
    <property name="compiler.generate.no.warnings" value="off"/>
    <property name="compiler.args" value=""/>
    <property name="compiler.max.memory" value="700m"/>
    <patternset id="ignored.files">
        <exclude name="**/*.hprof/**"/>
        <exclude name="**/*.pyc/**"/>
        <exclude name="**/*.pyo/**"/>
        <exclude name="**/*.rbc/**"/>
        <exclude name="**/*.yarb/**"/>
        <exclude name="**/*~/**"/>
        <exclude name="**/.DS_Store/**"/>
        <exclude name="**/.git/**"/>
        <exclude name="**/.hg/**"/>
        <exclude name="**/.svn/**"/>
        <exclude name="**/CVS/**"/>
        <exclude name="**/__pycache__/**"/>
        <exclude name="**/_svn/**"/>
        <exclude name="**/vssver.scc/**"/>
        <exclude name="**/vssver2.scc/**"/>
    </patternset>
    <patternset id="library.patterns">
        <include name="*.egg"/>
        <include name="*.jar"/>
        <include name="*.ear"/>
        <include name="*.swc"/>
        <include name="*.war"/>
        <include name="*.zip"/>
        <include name="*.ane"/>
    </patternset>
    <patternset id="compiler.resources">
        <exclude name="**/?*.java"/>
        <exclude name="**/?*.form"/>
        <exclude name="**/?*.class"/>
        <exclude name="**/?*.groovy"/>
        <exclude name="**/?*.scala"/>
        <exclude name="**/?*.flex"/>
        <exclude name="**/?*.kt"/>
        <exclude name="**/?*.clj"/>
        <exclude name="**/?*.aj"/>
    </patternset>

    <!-- JDK definitions -->

    <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
    <path id="jdk.classpath.1.8">
        <fileset dir="${jdk.home.1.8}">
            <include name="jre/lib/charsets.jar"/>
            <include name="jre/lib/deploy.jar"/>
            <include name="jre/lib/ext/access-bridge-64.jar"/>
            <include name="jre/lib/ext/cldrdata.jar"/>
            <include name="jre/lib/ext/dnsns.jar"/>
            <include name="jre/lib/ext/jaccess.jar"/>
            <include name="jre/lib/ext/jfxrt.jar"/>
            <include name="jre/lib/ext/localedata.jar"/>
            <include name="jre/lib/ext/nashorn.jar"/>
            <include name="jre/lib/ext/sunec.jar"/>
            <include name="jre/lib/ext/sunjce_provider.jar"/>
            <include name="jre/lib/ext/sunmscapi.jar"/>
            <include name="jre/lib/ext/sunpkcs11.jar"/>
            <include name="jre/lib/ext/zipfs.jar"/>
            <include name="jre/lib/javaws.jar"/>
            <include name="jre/lib/jce.jar"/>
            <include name="jre/lib/jfr.jar"/>
            <include name="jre/lib/jfxswt.jar"/>
            <include name="jre/lib/jsse.jar"/>
            <include name="jre/lib/management-agent.jar"/>
            <include name="jre/lib/plugin.jar"/>
            <include name="jre/lib/resources.jar"/>
            <include name="jre/lib/rt.jar"/>
        </fileset>
    </path>

    <property name="project.jdk.home" value="${jdk.home.1.8}"/>
    <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
    <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
    <!-- Register Custom Compiler Taskdefs -->
    <property name="javac2.home" value="${idea.home}/lib"/>
    <path id="javac2.classpath">
        <fileset dir="${javac2.home}">
            <include name="javac2.jar"/>
            <include name="jdom.jar"/>
            <include name="asm-all*.jar"/>
            <include name="forms-*.jar"/>
        </fileset>
    </path>
    <target name="register.custom.compilers">
        <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
        <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions"
                 classpathref="javac2.classpath"/>
    </target>

    <!-- Modules -->


    <!-- Module CityDominoSilasHoffmann -->

    <dirname property="module.citydominosilashoffmann.basedir" file="${ant.file}"/>


    <property name="module.jdk.home.citydominosilashoffmann" value="${project.jdk.home}"/>
    <property name="module.jdk.bin.citydominosilashoffmann" value="${project.jdk.bin}"/>
    <property name="module.jdk.classpath.citydominosilashoffmann" value="${project.jdk.classpath}"/>

    <property name="compiler.args.citydominosilashoffmann"
              value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>

    <property name="citydominosilashoffmann.output.dir"
              value="${module.citydominosilashoffmann.basedir}/out/production/CityDominoSilasHoffmann"/>
    <property name="citydominosilashoffmann.testoutput.dir"
              value="${module.citydominosilashoffmann.basedir}/out/test/CityDominoSilasHoffmann"/>

    <path id="citydominosilashoffmann.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="citydominosilashoffmann.module.production.classpath">
        <path refid="${module.jdk.classpath.citydominosilashoffmann}"/>
    </path>

    <path id="citydominosilashoffmann.runtime.production.module.classpath">
        <pathelement location="${citydominosilashoffmann.output.dir}"/>
    </path>

    <path id="citydominosilashoffmann.module.classpath">
        <path refid="${module.jdk.classpath.citydominosilashoffmann}"/>
        <pathelement location="${citydominosilashoffmann.output.dir}"/>
        <pathelement location="${path.variable.maven_repository}/junit/junit/4.12/junit-4.12.jar"/>
        <pathelement location="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar"/>
        <pathelement location="${path.variable.maven_repository}/junit/junit/4.12/junit-4.12.jar"/>
        <pathelement location="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar"/>
    </path>

    <path id="citydominosilashoffmann.runtime.module.classpath">
        <pathelement location="${citydominosilashoffmann.testoutput.dir}"/>
        <pathelement location="${citydominosilashoffmann.output.dir}"/>
        <pathelement location="${path.variable.maven_repository}/junit/junit/4.12/junit-4.12.jar"/>
        <pathelement location="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar"/>
        <pathelement location="${path.variable.maven_repository}/junit/junit/4.12/junit-4.12.jar"/>
        <pathelement location="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar"/>
    </path>


    <patternset id="excluded.from.module.citydominosilashoffmann">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.citydominosilashoffmann">
        <patternset refid="excluded.from.module.citydominosilashoffmann"/>
    </patternset>

    <path id="citydominosilashoffmann.module.sourcepath">
        <dirset dir="${module.citydominosilashoffmann.basedir}">
            <include name="src"/>
        </dirset>
    </path>

    <path id="citydominosilashoffmann.module.test.sourcepath">
        <dirset dir="${module.citydominosilashoffmann.basedir}">
            <include name="test"/>
        </dirset>
    </path>


    <target name="compile.module.citydominosilashoffmann"
            depends="compile.module.citydominosilashoffmann.production,compile.module.citydominosilashoffmann.tests"
            description="Compile module CityDominoSilasHoffmann"/>

    <target name="compile.module.citydominosilashoffmann.production" depends="register.custom.compilers"
            description="Compile module CityDominoSilasHoffmann; production classes">
        <mkdir dir="${citydominosilashoffmann.output.dir}"/>
        <javac2 destdir="${citydominosilashoffmann.output.dir}" debug="${compiler.debug}"
                nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true"
                executable="${module.jdk.bin.citydominosilashoffmann}/javac">
            <compilerarg line="${compiler.args.citydominosilashoffmann}"/>
            <bootclasspath refid="citydominosilashoffmann.module.bootclasspath"/>
            <classpath refid="citydominosilashoffmann.module.production.classpath"/>
            <src refid="citydominosilashoffmann.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.citydominosilashoffmann"/>
        </javac2>

        <copy todir="${citydominosilashoffmann.output.dir}">
            <fileset dir="${module.citydominosilashoffmann.basedir}/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.citydominosilashoffmann.tests"
            depends="register.custom.compilers,compile.module.citydominosilashoffmann.production"
            description="compile module CityDominoSilasHoffmann; test classes" unless="skip.tests">
        <mkdir dir="${citydominosilashoffmann.testoutput.dir}"/>
        <javac2 destdir="${citydominosilashoffmann.testoutput.dir}" debug="${compiler.debug}"
                nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true"
                executable="${module.jdk.bin.citydominosilashoffmann}/javac">
            <compilerarg line="${compiler.args.citydominosilashoffmann}"/>
            <bootclasspath refid="citydominosilashoffmann.module.bootclasspath"/>
            <classpath refid="citydominosilashoffmann.module.classpath"/>
            <src refid="citydominosilashoffmann.module.test.sourcepath"/>
            <patternset refid="excluded.from.compilation.citydominosilashoffmann"/>
        </javac2>

        <copy todir="${citydominosilashoffmann.testoutput.dir}">
            <fileset dir="${module.citydominosilashoffmann.basedir}/test">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="clean.module.citydominosilashoffmann" description="cleanup module">
        <delete dir="${citydominosilashoffmann.output.dir}"/>
        <delete dir="${citydominosilashoffmann.testoutput.dir}"/>
    </target>

    <target name="init" description="Build initialization">
        <!-- Perform any build initialization in this target -->
    </target>

    <target name="clean" depends="clean.module.citydominosilashoffmann" description="cleanup all"/>

    <target name="build.modules" depends="init, clean, compile.module.citydominosilashoffmann"
            description="build all modules"/>

    <target name="all" depends="build.modules" description="build all"/>
</project>